    <table class="table table-dark text-center vertical-center">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Group</th>
      <th scope="col">Operations</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
