<div class="container-fluid" id="table-container">
    <table class="table table-dark text-center vertical-center">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Pieces</th>
                <th scope="col">Operations</th>
            </tr>
        </thead>
        <tbody>
            {{#each invent}}
            <tr>
                <th scope="row" id="originId">{{id}}</th>
                <td>{{name}}</td>
                <td>{{stock}}</td>
                <td>
                    <button type="button" class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#exampleModal" id="whatId" onclick="retId({{id}})">
                        Edit
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Új termék hozzáadása</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/editinv">
                    <div>Pieces:</div>
                    <div><input type="number" name="newpieces" class="form-control form-control-lg"></div>
                    <input type="hidden" id="hiddenInput">
                    <input class="btn btn-primary mt-3" type="submit" value="Edit">
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function retId(needId) {
        document.querySelector('#hiddenInput').name = 'id';
        document.querySelector('#hiddenInput').value = needId;
    }
</script>